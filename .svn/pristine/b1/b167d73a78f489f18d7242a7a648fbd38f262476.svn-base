//通用样式
$activeColor:#1BA687;
$textColor:#444;
$bgColor:#f5f5f5;
$border:#e9e9e9;
*{
    margin: 0;
    padding: 0;
    list-style: none;
}
img{
    font-size: 0;
}
body,html{
  font-size: 14px;
  color: $textColor
}
::-webkit-scrollbar {
    width: 0px;
    height: 1px;
  }

::-webkit-scrollbar-thumb {
    border-radius: 5px;
    -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    background: rgba(0, 0, 0, 0.2);
}
.space-around{
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.space-between{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.flex-column{
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.flex{
    display: flex;
}
.wrap{
    flex-wrap: wrap;
}
/* 垂直居中 */
.center{
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 水平居中 */
.center-row{
    display: flex;
    justify-content: center;
}
 /* 竖行居中 */
.center-col{
    display: flex;
    align-items: center;
}
.padding-24{
    width: 100%;
    padding: 0 24px;
    box-sizing: border-box;
}
.fs-12{
  font-size: 12px
}
.fs-14{
  font-size: 14px
}
.fs-16{
  font-size: 16px
}
.fs-18{
  font-size: 18px
}
.fs-20{
  font-size: 20px
}
.fs-24{
  font-size: 24px
}
.fs-26{
  font-size: 26px
}
.fs-28{
  font-size: 28px
}
.fs-30{
  font-size: 30px
}
.fs-32{
  font-size: 32px
}
.fs-36{
  font-size: 36px
}
.color-0{
  color: #000
}
.color-4{
  color: #444;
}
.color-6{
  color: #666
}
.color-9{
  color: #999
}
.color-f{
  color: #fff
}
.color-r{
  color: #EB461A
}
.color-active{
  color: $activeColor
}
.bg-f{
  background-color: #fff;
}
.bg-f5{
  background-color: $bgColor
}
.bg-e{
  background-color: #eee
}
.bg-active{
  background-color: $activeColor
}
.list{
  padding-bottom: 20px;
  table{
    th{
      text-align: center;
    }
    td{
      text-align: center;
      .header{
        width: 60px;
        height: 60px;
        border-radius: 50%;
      }
      .long{
        width: 138px;
        height: 80px;
      }
      .mini{
        width: 74px;
        height: 83px;
      }
      .sq{
        width: 68px;
        height: 68px;
      }
      .links{
        width: 305px;
      }
      .sort{
        width: 76px
      }
      .tableft{
        text-align: left
      }
      .colorr{
        color: #EB461A
      }
      .btn{
        width: 80px;
        padding: 0 5px;
        height: 34px;
        margin: 0 auto;
        box-sizing: border-box;
        text-align: center;
        line-height: 34px;
        border-radius: 5px;
      }
      .link{
        color: $activeColor;
        cursor: pointer;
      }
      .active{
        color: #fff;
        background-color: $activeColor;
      }
      .del{
        background-color: #ddd;
        color: $textColor

      }
    }
  }
}
.imgbox{
  width: 250px;
  height: 180px;
  margin: 0 auto;
  .avatar-uploader .el-upload {
    border: 1px dashed #d9d9d9;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }
  .avatar-uploader .el-upload:hover {
    border-color: #409EFF;
  }
  .avatar-uploader-icon {
    font-size: 28px;
    color: #8c939d;
    width: 250px;
    height: 178px;
    line-height: 178px;
    text-align: center;
  }
  .avatar {
    width: 250px;
    height: 178px;
    display: block;
  }
}
.btn{
  cursor: pointer;
}
.link{
  cursor: pointer;
  color: $activeColor
}